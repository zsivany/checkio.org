def checkio(words):

    words = words.split(' ')
#    print (words)
    counter = 0

    for i in words:
#        print (i)
        
        if str(i).isalpha():
            counter += 1
            if counter >= 3:
                return True
        else:
            counter = 0
            
        
 #   print (counter)
    return False 
